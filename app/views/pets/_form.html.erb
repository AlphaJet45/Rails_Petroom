    <%= form.radio_button :sexe, "Female" %>
    <%= form.label :sexe_chat, "Femelle" %>
    </p>

    <p>
    Age<br>
    <%= form.number_field :age, in: 1..99, step: 1 %>
    </p>

  <p>
  Description<br>
  <%= form.text_area :desc, size: "24x6" %> 
  </p>
  
  <p>
    <%= form.submit %>
  </p>
 
<% end %>